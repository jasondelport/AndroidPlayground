<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/output1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_200"
        android:padding="5dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/output2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_200"
        android:padding="5dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/output3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange_200"
        android:padding="5dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_telephony_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="End call"/>

    <Button
        android:id="@+id/button_telephony_silence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Silence call"/>

    <Button
        android:id="@+id/button_ringer_silence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Silent Ringer"/>

    <Button
        android:id="@+id/button_ringer_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Normal Ringer"/>

</LinearLayout>
